{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4 left">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control"
                       id="postid" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control"
                       id="title" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="author"> 작성자</label>
                <input type="text" class="form-control"
                       id="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="price">가격</label>
                <input type="number" class="form-control"
                       id="price" value="{{post.price}}">
            </div>
            <div class="form-group">
                <label for="content"> 내용</label>
                <textarea class="form-control" id="content">{{post.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>

    <div class="right">
        현재 상태:
        <pre class="btn">{{state}}</pre><br>
        <input id="point" value="{{user.point}}" hidden>
        <input id="id" value="{{user.id}}" hidden>

        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>신청자</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#buyerUser}}
                <tr>
                    <td><a href="/">{{email}}</a></td>
                    <td><button type="button" class="btn btn-primary" id="btn-deal">거래승인</button></td>
                </tr>
            {{/buyerUser}}
            </tbody>
        </table>

        {{#isONGOING}}
            <td><button type="button" class="btn btn-primary" id="btn-deal">거래최종완료</button></td>
        {{/isONGOING}}

    </div>
</div>

{{>layout/footer}}